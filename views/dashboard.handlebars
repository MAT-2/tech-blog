<div class="d-flex justify-content-center mt-4">
  <div class="card shadow col-md-12">
    <h3>Post to Tech Blog:</h3>

    <form class="card-body form new-post-form">
      <div class="form-group p-3">
        <label for="post-name">Post Name:</label>
        <input class="form-input" type="text" id="post-name" name="post-name" />
      </div>
      <div class="form-group p-3">
        <label for="post-desc">Description:</label>
        <textarea class="form-input" id="post-desc" name="post-desc"></textarea>
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-primary">Create</button>
      </div>
    </form>
  </div>

  {{#if post.length}}
    <div class="col-md-6 post-list">
      <h3>Current Tech Blog Posts:</h3>

      {{#each posts as |post|}}
        <div class="row mb-2">
          <div class="col-md-8">
            <h4><a href="/posts/{{post.id}}">{{post.name}}</a></h4>
          </div>
          <div class="col-md-4">
            <button
              class="btn btn-sm btn-danger"
              data-id="{{post.id}}"
            >DELETE</button>
          </div>
        </div>
      {{/each}}
    </div>
  {{/if}}
</div>

<script src="./js/post.js"></script>